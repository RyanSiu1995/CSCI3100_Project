<div class="container">
  <div class="row">
    <div class="col s12">
      <h1 class='text-center'> <%= @trip.title %> </h1>
      <h3 class='text-center grey-text lighten-3'>
        @<%= @trip.country %>
      </h3>
      <div class="text-center">

      </div>

    </div>
  </div>

  <% if user_signed_in? %>

  <% if current_user.id == @trip.user.id%>

  <div class="fixed-action-btn">
    <a class="btn-floating btn-large red">
      <i class="large material-icons">add</i>
    </a>
    <ul>

      <li>
        <%= button_to raw("picture"),
        {:controller => "pictures", :action => "new"},
        :method=>:get, params: { id: @trip.id },
        class:"btn btn-floating btn-large blue",
          'data-position':"left",
          'data-tooltip': "new image".humanize%>

        </li>

        <li>
          <%= button_to raw("city"),
          {:controller => "cities", :action => "new"},
          :method=>:get, params: { id: @trip.id },
          class:"btn btn-floating btn-large blue",
            'data-position': "left",
            'data-tooltip': "new image".humanize%>
          </li>

          <li>
            <%= button_to raw("comment"),
            {:controller => "comments", :action => "new"},
            :method=>:get, params: { id: @trip.id },
            class:"btn btn-floating btn-large blue",
              'data-position': "left",
              'data-tooltip': "new image".humanize%>
            </li>
        </ul>
      </div>

      <% end %>

      <div class="">
        <h6 class='text-center'>

          <% if (current_user.liked? @trip) %>
          <%= button_to 'Unlike', {:controller => "trips", :action => "like"}, :method=>:post, params: { id: @trip.id }, class: "btn btn-primary" %>
          <i class="material-icons center red-heart">favorite</i>
          <% else %>
          <%= button_to 'Like', {:controller => "trips", :action => "like"}, :method=>:post, params: { id: @trip.id }, class: "btn btn-primary"  %>
          <i class="material-icons center red-heart">favorite_border</i>
          <% end %>
          <% end %>
        </h6>
        <h6 class='text-right grey-text lighten-3'>
          <% if current_user.id == @trip.user.id%> <%= link_to 'Edit', edit_trip_path(@trip) %> | <% end %>
          <%= link_to 'Back', user_path(@trip.user) %>
        </h6>
      </div>

      <hr>


      <div class="row">

        <% if @trip.pictures.any? %>

        <h5 class='text-left grey-text lighten-3'>
          <%= @trip.pictures.count %>
          <%= "Picture".pluralize(@trip.pictures.count) %>
        </h5>
        <div class="carousel">
          <%= render @pictures %>
        </div>
        <% end %>

        <% if @trip.cities.any? %>

        <h5 class='text-left grey-text lighten-3'>
          <%= @trip.cities.count %>
          <%= "City".pluralize(@trip.cities.count) %>
        </h5>

        <ul class="collapsible" data-collapsible="accordion">
          <%= render @cities %>
        </ul>
        <% end %>

        <hr>

        <div class="col-md-8">

          <%= render "comments/form" %>

          <% if @trip.comments.any? %>

          <h5 class='text-left grey-text lighten-3'>
            <%= @trip.comments.count %>
            <%= "Comments".pluralize(@trip.comments.count) %>
          </h5>
          <ol class="microposts">
            <%= render @comments %>
          </ol>
          <% end %>
        </div>

      </div>
    </div>
