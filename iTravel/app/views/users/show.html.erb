<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.trips.any? %>
      <h3> Number of trips: <%= @user.trips.count %> </h3>
      <ol class="trips">
        <%= render @trips %>
      </ol>
    <% end %>
  </div>
</div>
